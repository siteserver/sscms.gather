{
  "name": "gather",
  "displayName": "信息采集插件",
  "description": "SSCMS 信息采集插件能够采集网站内容至CMS系统中",
  "version": "1.0.10",
  "license": "GPL-3.0",
  "publisher": "sscms",
  "engines": {
    "sscms": "^7.0.5"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "采集",
    "内容采集",
    "页面采集",
    "图片下载",
    "附件下载"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/siteserver/sscms.gather"
  },
  "icon": "/assets/gather/logo.svg",
  "output": "",
  "main": "SSCMS.Gather.dll",
  "applyToSites": true,
  "applyToChannels": false,
  "extensions": {
    "permissions": {
      "gather_add": {
        "text": "添加采集规则",
        "type": ["web", "wx"]
      },
      "gather_list": {
        "text": "采集规则管理",
        "type": ["web", "wx"]
      }
    },
    "menus": {
      "gather_all": {
        "text": "信息采集",
        "iconClass": "fa fa-download",
        "type": ["web", "wx"],
        "permissions": [
          "gather_add",
          "gather_list"
        ],
        "menus": {
          "gather_add": {
            "text": "添加采集规则",
            "link": "/ss-admin/gather/add/",
            "permissions": ["gather_add"],
            "order": 1
          },
          "gather_list": {
            "text": "采集规则管理",
            "link": "/ss-admin/gather/list/",
            "permissions": ["gather_list"],
            "order": 2
          }
        }
      }
    },
    "tables": {
      "sscms_gather_rule": {
        "columns": [
          {
            "attributeName": "RuleName",
            "dataType": "VarChar"
          },
          {
            "attributeName": "SiteId",
            "dataType": "Integer"
          },
          {
            "attributeName": "LastGatherDate",
            "dataType": "DateTime"
          }
        ]
      }
    }
  }
}