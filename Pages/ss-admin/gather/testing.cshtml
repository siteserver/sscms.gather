@page
@{ Layout = "_Layout"; }
@section Styles{
  <style>
    .el-select {
      width: 100%;
    }
  </style>
}

<div style="height: 10px"></div>

<el-form ref="form" size="small" label-width="120px">

  <el-form-item label="采集地址">
    <el-select v-model="listUrl">
      <el-option v-for="gatherUrl in gatherUrls" :key="gatherUrl" :value="gatherUrl">{{gatherUrl}}</el-option>
    </el-select>
  </el-form-item>

</el-form>

<div style="text-align: center; margin: 20px 0;">
  <el-button size="small" type="primary" v-on:click="btnGetContentUrls">获取内容链接</el-button>
  <el-button size="small" type="default" v-on:click="btnCloseClick">关 闭</el-button>
</div>

<template v-if="contentUrls && contentUrls.length > 0">

  <el-divider></el-divider>

  <div style="text-align: center; margin-top: 15px;">
    <strong>共获取到 {{contentUrls.length}} 篇内容链接</strong>
  </div>

  <el-table stripe :data="contentUrls">
    <el-table-column label="内容地址">
      <template slot-scope="scope">
        <el-link :underline="false" type="primary" target="_blank" :href="scope.row">{{scope.row}}</el-link>
      </template>
    </el-table-column>
    <el-table-column label="操作" width="100">
      <template slot-scope="scope">
  
        <el-button type="default" size="small" v-on:click="btnGetContent(scope.row)">
          获取内容
        </el-button>
  
      </template>
    </el-table-column>
  </el-table>

</template>

@section Scripts{
  <script src="/assets/gather/js/testing.js" type="text/javascript"></script>
}